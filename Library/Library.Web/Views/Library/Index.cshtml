@model List<Library.Data.Book>

@if (Model.Count == 0)
{
    <b>There are no books available!</b>
}
else
{
    <table class="table table-striped">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Year</th>
            <th style="text-align:center">Copies available</th>
            <th></th>
        </tr>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Year</td>
                <td style="text-align:center">@book.Copies</td>
                <td><a asp-controller="Library" asp-action="Take" asp-route-name="@book.Title">Take</a></td>

            </tr>
        }
    </table>
}