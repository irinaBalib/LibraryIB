@model List<Library.Data.Book> 

@if (Model.Count == 0)
{
    <b>There are no books in your list!</b>
}
else
{
    <table class="table table-striped">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Year</th>
            <th></th>
        </tr>
        @foreach (var book in Model)
        {
    <tr>
        <td>@book.Title</td>
        <td>@book.Author</td>
        <td>@book.Year</td>
        <th><a asp-controller="Library" asp-action="ReturnBook" asp-route-title="@book.Title">Return</a></th>
    </tr>
        }
    </table>
}
